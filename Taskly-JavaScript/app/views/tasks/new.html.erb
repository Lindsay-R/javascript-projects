<h2>Create a new task </h2>


<%= form_for [@task_list, @task], html: { class: "task-form" } do |f| %>


  <% f.object.errors.full_messages.each do |error| %>
    <div class="errors">
      <%= error %>
    </div>
  <% end %>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description,  class: "form-field" %>
  </div>

  <div>
    <%= f.label :date %>
    <!--f.date_select :date,  class: "form-field"-->
    <%= f.text_field :date,  class: "form-field", id: "datepicker" %>

    <!--<p>Date: <input type="text" id="datepicker"></p>-->
  </div>

  <div>
    <%= f.submit "Create Task",  class: "submit-button", disabled: "disabled"   %>
  </div>

<% end %>
