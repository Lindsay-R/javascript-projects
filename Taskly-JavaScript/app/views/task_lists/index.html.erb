<h1>My Lists</h1><%= link_to "+ Add Task List", new_task_list_path %> <br>


<% @task_lists.each do |task_list| %>
  <!--route helpers, rails feature-->
  <section class="task-list">

    <!--*** working on the task_list link ***-->


    <h3> <span class="triangle_img"><%= image_tag "icons/triangle.jpeg" %></span> <%= link_to task_list.name, task_list_path(task_list) %> ...
      <%= link_to "Edit", edit_task_list_path(task_list) %> /
      <%= link_to "+ New Task", new_task_list_task_path(task_list.id) %>
    </h3>


    <div class="accord_body hidden">
    <% task_list.tasks.each do |task| %>
      <p>
        <%= task.description %> | <%= task.date %> <%= button_to('Delete', [task_list, task], method: :delete) %>
      <p>
    <% end %>
    </div>



  </section>

<% end %>
